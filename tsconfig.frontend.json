{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./frontend/assets/js",
    "target": "ES2017",
    "lib": ["DOM", "ES2017"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
